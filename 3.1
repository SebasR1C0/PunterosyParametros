		cout << "Numero incorrecto" << endl;
		cout << "Ingresa el numero: ";
		cin >> a;
		cout << endl;
	}
	return a;
}
int fac(int a) {
	int multi = 1;
	for (int i = 1; i <= a; i++) {
		multi *= i;
	}
	return multi;
}
void seno() {
	int x, n, suma = 0, ab = -1, ex = 1;
	do {
		cout << "Ingrese el numero de terminos: ";
		cin >> n;
	} while (n < 1);
	do {
		cout << "Ingrese el valor de x: ";
		cin >> x;
	} while (x < 0);
	for (int i = 1; i <= n; i++) {
		ab *= -1;
		suma += ab * pow(x, ex) / fac(ex);
		ex += 2;
	}
	cout << "El valor del seno es: " << suma << endl;;
}
void enesimo() {
	int n, a, b;
	do {
		cout << "Ingrese el valor de N: ";
		cin >> n;
	} while (n < 0);
	do {
		cout << "Ingrese el numero: ";
		cin >> a;
	} while (a < 1);
	for (int i = 0; i <= n; i++) {
		b = a % 10;
		a /= 10;
	}
	cout << "El n-esimo digito es: ";
	if (b == 0) {
		cout << "-1" << endl;
	}
	else {
		cout << b << endl;
	}
}
int main() {
	int a = menu();
	do {
		switch (a){ 
		case 1: seno();
		       break;
		case 2:  enesimo(); 
		}
		cout << endl;
