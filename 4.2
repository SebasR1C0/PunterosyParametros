	do {
		cout << "Ingrese el valor de N: ";
		cin >> n;
	} while (n > 10 || 1 > n);
	for (int i = 2; i <= n; i++) {
		suma = suma * numerador(i) / denominador(i);
	}
	cout << "Resultado: " << suma << endl;
}
void espacio(int i) {
