int numerador(int n) {
	int nu = 2;
	for (int i = 2; i <= n; i++) {
		if (i % 2 == 1) {
			nu +=  2;
		}
		else {
			nu *= 1;
		}
	}
	return nu;
}
int denominador(int n) {
	int de = 1;
	for (int i = 2; i <= n; i++) {
		if (i % 2 == 0) {
			de += 2;
		}
		else {
			de *= 1;
		}
	}
	return de;
}
