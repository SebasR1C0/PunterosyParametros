int factorial(int n) {
	int multi = 1;
	for (int i = 1; i <= n; i++) {
		multi *= i;
	}
	return multi;
}
double valor(double n, int k) {
	int abc = 1;
	double multi = n;
	for (int i = 1; i <= k; i++) {
		if (k == 0) {
			abc = 1;
		}
		abc += multi / factorial(i);
		multi *= n;
	}
	return abc;
}
void espacio(int b) {
	for (int a = 1; a <= b; a++) {
		cout << " ";
	}
}
void rombo(int n) {
	int a = n;
	int z = n;
	for (int i = 1; i <= n; i++) {
		espacio(a);
		a--;
		for (int j = 1; j <= i * 2 - 1; j++) {
			cout << j;
		}
		cout << endl;
	}
	for (int c = 1; c <= n; c++) {
		espacio(c + 1);
		z--;
		for (int b = 1; b <= z * 2 - 1; b++) {
			cout << b;
		}
		cout << endl;
	}
}
