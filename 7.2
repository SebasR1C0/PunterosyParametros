#include <iostream>
using namespace std;
void areavolumen(double arista) {
	double a = pow(arista,2) * sqrt(3);
	double b = sqrt(2) * pow(arista,3) / 12;
	cout << "El valor del area es: " << a << endl;
	cout << "El valor del volumen es: " << b << endl;
}
int main() {
	double arista;
	do {
		cout << "Ingrese el valor de la arista: ";
		cin >> arista;
	} while (arista <= 0);
	areavolumen(arista);
	return 0;
}
