}
void serie() {
	double suma = 0, multi = 1;
	int n;
	do {
		cout << "El valor de N es: ";
		cin >> n;
	} while (n < 1 || n > 20);
	for (int i = 1; i <= n; i++) {
		suma += multi * pow(3,i)/pow(2,i-1);
		multi *= -1;
	}
	cout << "El resultado de la serie es: " << suma << endl;
}
